<div class="card shadow">
  <div class="card-body">
    <h5>Доставка</h5>
    <%= form_with url: orders_path, method: :post do |f| %>
      <div class="mb-3">
        <div class="field">
          <%= f.label :customer_email, 'Электронная почта', class: 'form-label'%><br />
          <%= f.email_field :customer_email, value: current_user.email, autofocus: true, class: 'form-control' %>
        </div>
      </div>
      <div class="mb-3">
        <%= f.label :address, 'Адрес доставки', class: 'form-label' %><br />
        <%= f.text_field :address, autofocus: false, class: 'form-control' %>
      </div>
      <div class="row">
        <div class="col">
          <%= f.label :front_door, 'Подъезд', class: 'form-label' %><br />
          <%= f.text_field :front_door, autofocus: false, class: 'form-control' %>
        </div>
        <div class="col">
          <%= f.label :floor, 'Этаж', class: 'form-label' %><br />
          <%= f.text_field :floor, autofocus: false, class: 'form-control' %>
        </div>
        <div class="col">
          <%= f.label :intercom, 'Домофон', class: 'form-label' %><br />
          <%= f.text_field :intercom, autofocus: false, class: 'form-control' %>
        </div>
      </div>
      <br>
      <div class="mb-3 form-check">
        <%= f.check_box :no_hand, autofocus: false, class: 'form-check-input' %>
        <%= f.label :no_hand, 'Оставить у двери', class: 'form-check-label' %><br />
      </div>

      <% @shopping_cart.items.each do |item| %>
        <%= f.hidden_field 'items[]', value: item %>
      <% end %>
      <%= f.hidden_field 'items[]', value: @shopping_cart.items %>
      Итого: <span> <b><%= @shopping_cart_current_cost %></b></span> Р
      <%= f.button 'Оформить заказ', type: 'submit', class: 'btn btn-primary"' %>
    <% end %>
  </div>
</div>